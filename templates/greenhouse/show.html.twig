{% extends 'admin_base.html.twig' %}

{% block title %}{{ greenhouse.name }}{% endblock %}

{% block body %}
    <h1>{{ greenhouse.name }}</h1>

    <table class="table">
        <tbody>
             <tr>
                <th>Description</th>
                <td>{{ greenhouse.description }}</td>
            </tr>
            <tr>
                <th>Lumière (W/m²)</th>
                <td>{{ greenhouse.light }}</td>
            </tr>
            <tr>
                <th>Humidité (%)</th>
                <td>{{ greenhouse.humidity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_greenhouse_index') }}">Retour</a>

    <a href="{{ path('app_greenhouse_edit', {'id': greenhouse.id}) }}">Modifier</a>

    {{ include('greenhouse/_delete_form.html.twig') }}
{% endblock %}
