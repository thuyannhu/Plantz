{% extends 'base.html.twig' %}

{% block title %}Greenhouse index{% endblock %}

{% block body %}
    <h1>Greenhouse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Light</th>
                <th>Humidity</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for greenhouse in greenhouses %}
            <tr>
                <td>{{ greenhouse.id }}</td>
                <td>{{ greenhouse.light }}</td>
                <td>{{ greenhouse.humidity }}</td>
                <td>{{ greenhouse.name }}</td>
                <td>
                    <a href="{{ path('app_greenhouse_show', {'id': greenhouse.id}) }}">show</a>
                    <a href="{{ path('app_greenhouse_edit', {'id': greenhouse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_greenhouse_new') }}">Create new</a>
{% endblock %}
